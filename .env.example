# FreeAgentics Environment Configuration
# Copy this file to .env and configure for your deployment

# Environment mode (development/production)
# Set to "true" for development mode with SQLite fallback
DEVELOPMENT_MODE=true

# Database Configuration
# For development: Leave DATABASE_URL unset to use SQLite fallback
# For production: Set to your PostgreSQL connection string
# DATABASE_URL=postgresql://username:password@host:port/database

# PostgreSQL Configuration (for production)
POSTGRES_PASSWORD=your_secure_postgres_password_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NODE_ENV=production

# Security (generate secure keys for production)
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production

# LLM Configuration (optional - mock providers used if not set)
# Leave these empty to use mock providers for demo mode
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
# Mock providers enabled when API keys are empty
USE_MOCK_LLM=true

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# Debug Settings (for development)
DEBUG=true
DEBUG_SQL=false

# Docker specific
COMPOSE_PROJECT_NAME=freeagentics

# Testing
TESTING=false

# Demo Mode Configuration
# Enable full demo functionality without external dependencies
DEMO_MODE=true
# Mock data for agents and conversations
USE_MOCK_DATA=true
# Demo WebSocket endpoint (no auth required)
DEMO_WS_ENDPOINT=/api/v1/ws/demo
