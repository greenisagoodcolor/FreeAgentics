# FreeAgentics Environment Configuration
# Copy this file to .env and configure for your deployment

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DATABASE_URL=postgresql://freeagentics:${POSTGRES_PASSWORD}@postgres:5432/freeagentics

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NODE_ENV=production

# Security (generate secure keys for production)
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production

# LLM Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# Docker specific
COMPOSE_PROJECT_NAME=freeagentics