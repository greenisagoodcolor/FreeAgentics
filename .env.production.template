# FreeAgentics Production Environment Configuration
#
# CRITICAL: This file contains sensitive production secrets.
# - Never commit this file to version control
# - Use strong, unique passwords and secrets
# - Store secrets in a secure key management system in production
# - Rotate secrets regularly

# =================== CORE APPLICATION CONFIGURATION ===================

# Domain and SSL Configuration
DOMAIN=your-domain.com
HTTPS_ONLY=true
SECURE_COOKIES=true

# Application Version and Build Info
VERSION=v1.0.0-alpha
BUILD_DATE=
GIT_COMMIT=

# Data and Backup Paths
DATA_PATH=/opt/freeagentics/data
BACKUP_PATH=/opt/freeagentics/backups
LOG_PATH=/opt/freeagentics/logs

# =================== DATABASE CONFIGURATION ===================

# PostgreSQL Configuration
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_32_CHARS
POSTGRES_EXPORTER_PASSWORD=CHANGE_ME_EXPORTER_PASSWORD
DATABASE_URL=postgresql://freeagentics:CHANGE_ME_STRONG_PASSWORD_32_CHARS@postgres:5432/freeagentics

# =================== CACHE CONFIGURATION ===================

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_32_CHARS

# =================== SECURITY CONFIGURATION ===================

# Application Security Keys (Generate with: openssl rand -hex 32)
SECRET_KEY=CHANGE_ME_SECRET_KEY_64_CHARACTERS_LONG_RANDOM_STRING
JWT_SECRET=CHANGE_ME_JWT_SECRET_64_CHARACTERS_LONG_RANDOM_STRING

# Authentication Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# =================== MONITORING CONFIGURATION ===================

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_ADMIN_PASSWORD
GRAFANA_SECRET_KEY=CHANGE_ME_GRAFANA_SECRET_KEY_32_CHARS
GRAFANA_DB_PASSWORD=CHANGE_ME_GRAFANA_DB_PASSWORD

# Monitoring Endpoints
ENABLE_METRICS=true
METRICS_PORT=9090
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# =================== PERFORMANCE CONFIGURATION ===================

# Application Performance
WORKERS=4
WORKER_CONNECTIONS=1000
MAX_REQUESTS=10000
MAX_REQUESTS_JITTER=1000
KEEP_ALIVE=2
TIMEOUT=60
GRACEFUL_TIMEOUT=30

# =================== BACKUP CONFIGURATION ===================

# Backup Scheduling
BACKUP_SCHEDULE=0 2 * * *
BACKUP_KEEP_DAYS=30
BACKUP_KEEP_WEEKS=4
BACKUP_KEEP_MONTHS=12
RETENTION_DAYS=30

# Cloud Backup Configuration (Optional)
BACKUP_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# =================== SSL/TLS CONFIGURATION ===================

# SSL Certificate Monitoring
CHECK_INTERVAL=3600
WARNING_DAYS=30
CRITICAL_DAYS=7

# =================== NOTIFICATION CONFIGURATION ===================

# Alert Notifications (Optional)
SLACK_WEBHOOK=
EMAIL_TO=
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# =================== ADVANCED CONFIGURATION ===================

# Logging Level
LOG_LEVEL=INFO

# Development/Debug (Set to false in production)
PRODUCTION=true
DEBUG=false

# =================== DOCKER CONFIGURATION ===================

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=freeagentics-prod

# Docker Registry (if using private registry)
DOCKER_REGISTRY=
DOCKER_USERNAME=
DOCKER_PASSWORD=

# =================== EXAMPLE VALUES ===================
#
# Use these commands to generate secure random values:
#
# For 32-character passwords:
# openssl rand -base64 32
#
# For 64-character secrets:
# openssl rand -hex 32
#
# For JWT secrets (recommended 256-bit):
# python3 -c "import secrets; print(secrets.token_hex(32))"
