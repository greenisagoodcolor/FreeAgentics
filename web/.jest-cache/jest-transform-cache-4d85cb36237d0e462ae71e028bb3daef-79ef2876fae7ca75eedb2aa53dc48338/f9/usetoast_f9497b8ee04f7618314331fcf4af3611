const _react = require("react");
let toastId = 0;
function useToast() {
    const [toasts, setToasts] = (0, _react.useState)([]);
    const toast = (0, _react.useCallback)(({ title, description, duration = 3000 })=>{
        const id = toastId++;
        const newToast = {
            id,
            title,
            description,
            duration
        };
        setToasts((prev)=>[
                ...prev,
