# FreeAgentics Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/freeagentics
POSTGRES_USER=freeagentics_user
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD_HERE
POSTGRES_DB=freeagentics

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Settings
SECRET_KEY=CHANGE_ME_USE_RANDOM_64_CHAR_STRING
JWT_SECRET_KEY=CHANGE_ME_USE_DIFFERENT_RANDOM_64_CHAR_STRING
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# API Settings
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Security Headers
HSTS_MAX_AGE=31536000
CSP_POLICY="default-src 'self'"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# SSL/TLS (Production)
SSL_REDIRECT=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
